<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ResultFragment">


    <TextView
        android:id="@+id/testSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Sonuçları"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_margin="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dogruSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dogru Sayisi"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/c1"
        android:textSize="35sp"
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testSonuc"
        />

    <TextView
        android:id="@+id/dogruSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/c3"
        android:textSize="27sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogruSonuc"
        />

    <TextView
        android:id="@+id/yanlisSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yanlış Sayisi"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/c1"
        android:textSize="35sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogruSayisi"
        />

    <TextView
        android:id="@+id/yanlisSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/c3"
        android:textSize="27sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yanlisSonuc"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yanlisSayisi"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        android:text="Yanlis yaptığınız sorular Tekrar kısmına eklenmiştir."
        android:fontFamily="@font/google_sans_regular"
        android:textSize="16sp"
        android:textColor="@color/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>