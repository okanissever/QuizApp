<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F5"
    tools:context=".view.QuizFragment">


    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/google_sans_bold"
        android:text="Imagine"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/google_sans_medium"
        android:text="Option A"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="52dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/google_sans_medium"
        android:text="Button"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonC" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="52dp"
        android:backgroundTint="#FFFFFF"
        android:text="Button"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonB"
        android:fontFamily="@font/google_sans_medium"/>

    <Button
        android:id="@+id/buttonB"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="52dp"
        android:backgroundTint="#FFFFFF"
        android:text="Button"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonA"
        android:fontFamily="@font/google_sans_medium"/>

    <Button
        android:id="@+id/nextButton"
        style="@style/RoundedMaterialButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:background="@color/c1"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/google_sans_medium"
        android:text="SÄ±radaki Soru"
        android:textColor="#FFFFFF"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonD" />

</androidx.constraintlayout.widget.ConstraintLayout>