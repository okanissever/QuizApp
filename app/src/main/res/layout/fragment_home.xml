<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment"
    android:background="#F2F2F5">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/a1LVL"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/b2LVL"
        app:layout_constraintEnd_toStartOf="@id/a2LVL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A1 Seviyesi"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/google_sans_regular"
            android:textColor="@color/c1"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/a2LVL"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/a1LVL"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A2 Seviyesi"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/google_sans_regular"
            android:textColor="@color/c1"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/b1LVL"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@id/b2LVL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a1LVL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B1 Seviyesi"
            android:textAlignment="center"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/google_sans_regular"
            android:textColor="@color/c1"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/b2LVL"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="50dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/b1LVL"
        app:layout_constraintTop_toBottomOf="@id/a2LVL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B2 Seviyesi"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="32sp"
            android:fontFamily="@font/google_sans_regular"
            android:textColor="@color/c1"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seviyeler"
        android:fontFamily="@font/google_sans_bold"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>